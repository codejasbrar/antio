          {% comment %}
          
          <div class="previous-next-blog-section">
            <div class="previous-side">
              {% if blog.previous_article %}
              	<p>Previous article</p>
              {% endif %}
              <a href="{{blog.previous_article.url}}">{{blog.previous_article.title}}</a>
            </div>
            <div class="next-side">
              {% if blog.next_article %}
