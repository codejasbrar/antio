<div class="container-fluid bg-black">
  <div class="row black-div-wrapper about_row">
    
    {% for block in section.blocks %}
    <div class="col-md-4 about_logo_image black-box">
      {% if block.settings.image != blank %}
       <img class="guaranteeIcon" class="icon-img" src='{{block.settings.image}}' />
      {% endif %}
      <p>{{ block.settings.text }}</p>
    </div>
    {% endfor %}
  </div>  
</div>


