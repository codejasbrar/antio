<section id="related_articles">
  <div class="container">
      <div class="row">
        <div class="col-md-12 related_articles_head">
          <h2 class="title pb-0">{{ section.settings.title }}</h2>
        </div>
       </div>
        <div class="row related_article_carousel">
          {% assign selected_articles = article.metafields.Choose_article.Choose_article %}
        {% for selected_handle in selected_articles %} 
        
        	  <div class="col related_article_carousel_items">
                <div class="blog-box">
                  <div class="blog-img">
                    <a href="{{ articles[selected_handle].url }}">
                    <img src="{{ articles[selected_handle].image.src | img_url: 'master' }}" alt="">
                    </a>
                    {% if section.settings.show_date == true %}
                    <div class="date-block">
                      <div class="date-day">
                        <p>{{ articles[selected_handle].published_at | date: "%b" }}<span class="day">{{ articles[selected_handle].published_at | date: "%d" }}</span></p>
                      </div>
                    </div>
                    {% endif %}
                  </div>
                  <div class="blog-text text-left">
                    <a href="{{ articles[selected_handle].url }}">{{ articles[selected_handle].title | truncatewords: 20, "" }} <br>
                    <span class="recipe_time">{{articles[selected_handle].metafields.Recipe_time.recipe_time}}</span>
                    </a>
                  </div>
                </div>
              </div>
        {% endfor %}  
    </div>
  </div>
</section>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" integrity="sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
